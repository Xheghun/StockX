<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CoinDetailsActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coin_details_appbar"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coin_details_collapsing_toolbar"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="@string/profile_bg"
                android:fitsSystemWindows="true"
                android:src="@drawable/details_bg"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>
            <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/coin_details_toolbar"
            app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coin_details_nested_scroll_view"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/amiko_bold"
                    android:text="Currency Info"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:background="@color/colorDetailsLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amiko_semibold"
                        android:padding="5dp"
                        android:text="Price:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amiko"
                        android:padding="5dp"
                        android:text="@string/profile_bg" />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:fontFamily="@font/amiko_semibold"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/amiko"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/date"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Symbol:"
                        android:fontFamily="@font/amiko_semibold"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amiko"
                        android:text="@string/profile_bg"
                        android:id="@+id/symbol"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slug:"
                        android:fontFamily="@font/amiko_semibold"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/amiko"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/slug"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume24h:"
                        android:fontFamily="@font/amiko_semibold"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amiko"
                        android:text="@string/profile_bg"
                        android:id="@+id/volume24h"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Circulating Supply:"
                        android:fontFamily="@font/amiko_semibold"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/amiko"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/circulating_supply"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/amiko_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Supply:"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:fontFamily="@font/amiko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/max_supply"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/amiko_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Market Cap:"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:fontFamily="@font/amiko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/market_cap"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/amiko_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change(s) in Last 1 hour:"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:fontFamily="@font/amiko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/change1h"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/amiko_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change(s) in the Last 24 hours:"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:fontFamily="@font/amiko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/change24h"
                        android:padding="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorDetailsLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/amiko_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change(s) in the Last 7 days:"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:fontFamily="@font/amiko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_bg"
                        android:id="@+id/changes_7_days"
                        android:padding="5dp"/>
                </LinearLayout>
            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--Share Details Button -->
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_fab"
        app:fabSize="normal"
        app:layout_anchor="@id/coin_details_appbar"
        app:layout_anchorGravity="bottom|end"
        android:src="@drawable/ic_share_white_24dp"
        android:elevation="4dp"
        android:layout_margin="10dp"/>
</android.support.design.widget.CoordinatorLayout>