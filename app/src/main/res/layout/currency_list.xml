<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:background="@drawable/card_coner"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:background="@drawable/card_coner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/amiko_bold"
                android:gravity="center"
                android:text="R"
                android:textColor="#ffffff"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_toEndOf="@id/profile"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_coin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amiko_bold"
                        android:paddingRight="5dp"
                        android:text="BitCoin"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/card_coin_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/card_coin_name"
                        android:fontFamily="@font/amiko"
                        android:text="(BTC)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/card_coin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_coin_name"
                    android:fontFamily="@font/amiko_semibold"
                    android:padding="4dp"
                    android:text="Price: $200,000" />

                <TextView
                    android:id="@+id/card_market_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_coin_price"
                    android:fontFamily="@font/amiko_semibold"
                    android:padding="4dp"
                    android:text="Market Capital: $500,000" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>